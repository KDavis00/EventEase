@using EventEase.Models
@using EventEase.Shared
@namespace EventEase.Components

<div class="event-card">
    <h3>@Event.Name</h3>
    <p><strong>Date:</strong> @Event.Date.ToShortDateString()</p>
    <p><strong>Location:</strong> @Event.Location</p>
    <button @onclick="NavigateToDetails">View Details</button>
</div>

@code {
    [Parameter]
    public EventModel Event { get; set; } = default!;

    [Inject]
    public NavigationManager NavManager { get; set; } = default!;

    private void NavigateToDetails()
    {
        NavManager.NavigateTo($"/details/{Event.Id}");
    }
}
